{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "addLabels": ["dependencies"],
  "schedule": ["on wednesday"],

  "packageRules": [
    {
      "groupName": "GitHub Actions - Major Revisions",
      "matchPaths": [".github/**"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "groupName": "GitHub Actions - Minor Revisions",
      "matchPaths": [".github/**"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false
    },

    {
      "groupName": "Docs - Major Revisions",
      "matchPaths": ["docs/**"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "groupName": "Docs - Minor Revisions",
      "matchPaths": ["docs/**"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false
    },

    {
      "groupName": "Forui - Major Revisions",
      "matchPaths": ["forui/**"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "groupName": "Forui - Minor Revisions",
      "matchPaths": ["forui/**"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false
    },

    {
      "groupName": "Forui Gradle - Major Revisions",
      "matchPaths": ["forui/example/android/**"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "groupName": "Forui Gradle - Minor Revisions",
      "matchPaths": ["forui/example/android/**"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false
    },

    {
      "groupName": "Forui Assets - Major Revisions",
      "matchPaths": ["forui_assets/**"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "groupName": "Forui Assets- Minor Revisions",
      "matchPaths": ["forui_assets/**"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false
    }
  ]
}
